
<div class="container">

  <div class="row">
    <% @products.each do |product| %>
      <div class="small-12 medium-6 large-3 columns end">
        <div class="card">
          <div class="card-image">
            <%= link_to product do %>
              <img src="<%= product.image_url %>" style=" width: 300px; height:250px; " alt="" />
            <% end %>
          </div>
          <div class="card-header">
            <%= link_to product.name, product %>
          </div>
          <div class="card-copy">
            <%= truncate(strip_tags(product.description)) %><br>
            Published in <%= product.year %><br>
            <strong><%= product.price %> $</strong>
          </div>
        </div>
      </div>
    <% end %>
  </div>

